{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/franciscoCabezasVega/ISTQB-Study-App",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "chore", "release": false },
          { "type": "style", "release": false },
          { "type": "test", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features", "hidden": false },
            { "type": "fix", "section": "üêõ Bug Fixes", "hidden": false },
            { "type": "perf", "section": "‚ö° Performance", "hidden": false },
            { "type": "refactor", "section": "‚ôªÔ∏è Refactors", "hidden": false },
            { "type": "docs", "section": "üìù Documentation", "hidden": false },
            { "type": "chore", "section": "üîß Chores", "hidden": true },
            { "type": "style", "section": "üíÑ Styles", "hidden": true },
            { "type": "test", "section": "‚úÖ Tests", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# üìù Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/sync-versions.js && bash scripts/update-badges-release.sh ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "README.md",
          "README.es.md",
          "packages/*/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false,
        "failTitle": false,
        "labels": false,
        "releasedLabels": false,
        "assets": []
      }
    ]
  ]
}
